# Seth Clinic CMS - Production Environment Configuration
# Copy this file to .env.production and update the values

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration
POSTGRES_PASSWORD=your-super-secure-postgres-password-here
MONGODB_PASSWORD=your-super-secure-mongodb-password-here
REDIS_PASSWORD=your-super-secure-redis-password-here

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-minimum-32-characters

# API Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# SHA Configuration
SHA_API_URL=https://api.sha.go.ke
SHA_PROVIDER_CODE=CLINIC001
SHA_FACILITY_LEVEL=2
SHA_SUBMISSION_TIMEOUT_MS=30000
SHA_REQUIRE_INVOICE_BEFORE_SUBMISSION=true
SHA_AUTO_SUBMIT_CLAIMS=false
SHA_PAYMENT_CHECK_INTERVAL_HOURS=24
SHA_EXPORT_RETENTION_DAYS=90
SHA_DOCUMENT_MAX_SIZE_MB=10
SHA_BATCH_SIZE_LIMIT=100

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_PASSKEY=your-mpesa-passkey
MPESA_BASE_URL=https://api.safaricom.co.ke
MPESA_CALLBACK_URL=https://your-domain.com/api/mpesa/callback

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
ADMIN_EMAIL=admin@your-domain.com

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/app/uploads

# Currency Configuration
DEFAULT_CURRENCY=KES
CURRENCY_LOCALE=en-KE
CURRENCY_SYMBOL=KES

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
# Generate secure passwords using: openssl rand -base64 32
# Generate JWT secrets using: openssl rand -base64 64

# Performance Configuration
# These values can be adjusted based on your server capacity
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true
AUDIT_LOGGING=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# SSL Configuration (if using reverse proxy)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Domain Configuration
DOMAIN=your-domain.com
SUBDOMAIN=clinic
FULL_DOMAIN=clinic.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here
SESSION_MAX_AGE=86400000  # 24 hours

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# MongoDB Configuration
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_MAX_IDLE_TIME=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=false

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Development/Testing (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false
